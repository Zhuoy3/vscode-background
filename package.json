{
  "name": "background",
  "displayName": "background",
  "description": "Bring background images to your vscode",
  "version": "2.0.0-alpha.0",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "vscode:uninstall": "node ./out/uninstall",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src",
    "package": "vsce package",
    "prepare": "husky"
  },
  "publisher": "shalldie",
  "author": "shalldie",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shalldie/vscode-background.git"
  },
  "engines": {
    "vscode": "^1.94.0"
  },
  "icon": "images/logo.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.background.info",
        "category": "Background",
        "title": "%extension.background.command.info.title%"
      },
      {
        "command": "extension.background.install",
        "category": "Background",
        "title": "%extension.background.command.install.title%"
      },
      {
        "command": "extension.background.uninstall",
        "category": "Background",
        "title": "%extension.background.command.uninstall.title%"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "background",
      "properties": {
        "background.enabled": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "%extension.background.enabled.description%"
        },
        "background.useFront": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "%extension.background.useFront.description%"
        },
        "background.style": {
          "type": "object",
          "default": {
            "background-position": "100% 100%",
            "background-size": "auto",
            "opacity": 1
          },
          "markdownDescription": "%extension.background.style.description%"
        },
        "background.styles": {
          "type": "array",
          "default": [
            {},
            {},
            {}
          ],
          "markdownDescription": "%extension.background.styles.description%"
        },
        "background.customImages": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string",
            "pattern": "^(https://|file://)",
            "patternErrorMessage": "%extension.background.urlProtocol.error%"
          },
          "markdownDescription": "%extension.background.customImages.description%"
        },
        "background.interval": {
          "type": "number",
          "default": 0,
          "markdownDescription": "%extension.background.interval.description%"
        },
        "background.fullscreen": {
          "type": "object",
          "default": {
            "images": [],
            "opacity": 0.91,
            "size": "cover",
            "position": "center",
            "interval": 0
          },
          "properties": {
            "images": {
              "type": "array",
              "default": [],
              "items": {
                "type": "string",
                "pattern": "^(https://|file://)",
                "patternErrorMessage": "%extension.background.urlProtocol.error%"
              },
              "markdownDescription": "%extension.background.customImages.description%"
            }
          },
          "markdownDescription": "%extension.background.fullscreen.description%"
        }
      }
    }
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@types/lockfile": "^1.0.4",
    "@types/node": "20.x",
    "@types/stylis": "^4.2.6",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/vsce": "^3.1.1",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@vscode/sudo-prompt": "^9.3.1",
    "lockfile": "^1.0.4",
    "stylis": "^4.3.4"
  }
}
